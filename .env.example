# Path to the Google Health / Health Connect SQLite DB
SQLITE_DB_PATH=/home/<you>/Projects/sql_health_data_importer_v3/health_data.db

# Log file path
LOG_FILE=/home/<you>/Projects/sql_health_data_importer/full_import_log.txt

# PostgreSQL connection
PGHOST=<your_database_host>
PGPORT=5432
PGDATABASE=<your_database_name>
PGUSER=<your_user>
PGPASSWORD=<your_database_password>

# the script will import this default set:
# steps_record_table, body_fat_record_table, weight_record_table,
# speed_record_table, sleep_session_record_table, distance_record_table
TABLES_TO_IMPORT=steps_record_table,body_fat_record_table,weight_record_table,speed_record_table,sleep_session_record_table,distance_record_table

# Where the project lives
PROJECT_ROOT=/home/<you>/Projects/sql_health_data_importer

# Virtualenv location ($PROJECT_ROOT/venv)
VENV_DIR=/home/<you>/Projects/sql_health_data_importer/venv

# script path
IMPORTER_SCRIPT=/home/<you>/Projects/sql_health_data_importer/health_data_importer.py

# Systemd service/timer name (without .service/.timer)
SERVICE_NAME=sql-health-data-importer
TIMER_NAME=sql-health-data-importer

# User to run the importer as (defaults to whoever runs install.sh)
SERVICE_USER=<you>

# Description strings
SERVICE_DESCRIPTION=SQL Health Data Importer
TIMER_DESCRIPTION=Run SQL Health Data Importer daily at 00:10

# When the timer should run (defaults: "*-*-* 00:10:00")
ONCALENDAR=*-*-* 00:10:00

# Where to put the systemd units
SYSTEMD_DIR=/etc/systemd/system

# Where systemd pipes stdout/stderr from the service
SERVICE_LOG_FILE=/home/<you>/Projects/sql_health_data_importer/importer.log

EXTRA_PIP_PACKAGES=requests python-dotenv
